{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/.well-known/acme-challenge/**",
        "destination": "/.well-known/acme-challenge/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
